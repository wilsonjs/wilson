{
  "name": "wilson",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "type": "module",
  "bin": {
    "wilson": "bin/wilson.js"
  },
  "scripts": {
    "clean": "node -e \"fs.rmSync('dist', { force: true, recursive: true })\"",
    "build": "npm run clean && run-p build:*",
    "build:node": "tsup src/node",
    "build:client": "tsc -p src/client",
    "dev": "run-p dev:*",
    "dev:node": "npm run build:node -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codepunkt/wilson",
    "directory": "packages/wilson"
  },
  "files": [
    "dist",
    "src",
    "virtual.d.ts"
  ],
  "main": "./dist/node/index.js",
  "module": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/node/index.js",
      "require": "./index.cjs"
    },
    "./jsx-runtime": "./jsx-runtime.js",
    "./dist/client/*": "./dist/client/*",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.6",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.75.7",
    "tsup": "^6.1.3",
    "vitest": "^0.16.0"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.3.0",
    "@wilson/config": "workspace:^1.0.0",
    "@wilson/pages": "workspace:^1.0.0",
    "debug": "^4.3.4",
    "fast-equals": "^4.0.1",
    "fast-glob": "^3.2.11",
    "mico-spinner": "^1.4.0",
    "minimist": "^1.2.6",
    "pathe": "^0.3.2",
    "picocolors": "^1.0.0",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1",
    "preact-router": "^4.1.0",
    "readdirp": "^3.6.0",
    "sass": "^1.53.0",
    "vite": "3.0.0"
  }
}
