{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "declaration": true,
    "noUnusedLocals": false,
    "useUnknownInCatchVariables": false,

    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "lib": ["ESNext", "DOM"],
    "types": ["node", "vite/client"]
  },
  "include": ["src", "tests", "types", "client.d.ts"]
}
